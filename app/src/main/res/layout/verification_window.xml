<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/e_verificationCode"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="39dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Verification Code"
        android:inputType="number"
        android:textSize="18dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/b_verifyButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/button_style"
        android:text="Verify"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="22dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@+id/e_verificationCode"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/txt_resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:clickable="true"
        android:onClick="resendCode"
        android:drawableLeft="@drawable/resend_icon"
        android:text="Resend Code"
        android:textSize="18dp"
        android:layout_below="@+id/b_verifyButton"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_resendCode"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="17dp"
        android:textStyle="bold" />
</RelativeLayout>