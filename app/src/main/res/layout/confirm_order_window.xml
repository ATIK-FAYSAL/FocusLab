<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:text="Name :"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/e_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_toEndOf="@+id/textView16"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone :"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:id="@+id/e_phone"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignStart="@+id/e_name" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="17dp"
            android:text="Email :" />

        <TextView
            android:id="@+id/e_email"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView16"
            android:layout_alignStart="@+id/e_phone" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Photo Size :"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14" />

        <TextView
            android:id="@+id/e_photoSize"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView18"
            android:layout_alignStart="@+id/e_email" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView16"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="13dp"
            android:text="Total Copy :" />

        <TextView
            android:id="@+id/e_totalCopy"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignStart="@+id/e_photoSize" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/textView18"
            android:layout_marginTop="14dp"
            android:text="Amount :" />

        <TextView
            android:id="@+id/e_ammount"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/b_done"
            android:layout_alignStart="@+id/e_totalCopy" />

        <Button
            android:id="@+id/b_done"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_marginTop="85dp"
            android:layout_below="@+id/textView20"
            android:layout_alignEnd="@+id/e_ammount"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

</ScrollView>
